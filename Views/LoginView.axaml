<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:ledger_vault.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ledger_vault.Views.LoginView"
             x:DataType="vm:LoginViewModel"
             Background="{DynamicResource PrimaryBackground}"
             Foreground="{DynamicResource PrimaryForeground}">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border CornerRadius="15" Background="{DynamicResource SteelGray}" Padding="20">
            <StackPanel Spacing="10">
                <TextBlock FontFamily="{DynamicResource MerriweatherBlack}" FontSize="24">
                    LogIn to
                    <TextBlock Foreground="{DynamicResource LiliacPastel}">Your Ledger</TextBlock>
                </TextBlock>

                <TextBox PasswordChar="*" Watermark="Enter your password" FontFamily="{DynamicResource Merriweather}"
                         FontSize="15" Margin="0 15 0 0" CornerRadius="5">
                </TextBox>

                <Button Classes="login" Content="LogIn" HorizontalAlignment="Center"
                        Margin="0 20" FontSize="18" CornerRadius="5"
                        Command="{Binding ProcessLoginCommand}"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>