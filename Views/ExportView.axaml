<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ledger_vault.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
             x:Class="ledger_vault.Views.ExportView"
             x:DataType="vm:ExportViewModel"
             Background="{DynamicResource PrimaryBackground}"
             Foreground="{DynamicResource PrimaryForeground}">
    <Design.DataContext>
        <vm:ExportViewModel />
    </Design.DataContext>
    <Border CornerRadius="5" Padding="40" Margin="20" Background="{DynamicResource SecondaryBackground}">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label FontFamily="{DynamicResource MerriweatherBlack}" FontSize="20" Content="Export transactions" />
                <Label Classes="icon" FontFamily="{DynamicResource Phosphor}" FontSize="20" Content="&#xeaf0;" />
            </StackPanel>
            <TextBlock FontFamily="{DynamicResource PoppinsLight}" FontSize="14">You can export your transactions in several common formats here.</TextBlock>
            <StackPanel Margin="0 20 0 0" Orientation="Horizontal" Height="90" Spacing="10">
                <StackPanel>
                    <Label FontFamily="{DynamicResource PoppinsLight}" FontSize="14">
                        The format you prefer
                    </Label>
                    <ComboBox x:Name="FormatsComboBox" SelectedIndex="{Binding SelectedExportFormat }" Width="300"
                              MaxDropDownHeight="200" CornerRadius="5" FontSize="15"
                              FontFamily="{DynamicResource Poppins}" Height="35"
                              IsEnabled="{Binding !IsExporting}">
                        <ComboBox.Styles>
                            <Style Selector="ComboBox /template/ Popup">
                                <Setter Property="MinWidth" Value="300" />
                                <Setter Property="MaxWidth" Value="300" />
                            </Style>
                        </ComboBox.Styles>
                    </ComboBox>
                </StackPanel>
                <Button Classes="action" Content="Export" VerticalAlignment="Center" FontSize="15"
                        FontFamily="{DynamicResource PoppinsLight}" CornerRadius="5"
                        Command="{Binding ExportTransactionsCommand}"
                        IsEnabled="{Binding !IsExporting}" />
            </StackPanel>

            <StackPanel Margin="0 20 0 0" IsVisible="{Binding IsExporting}">
                <TextBlock FontFamily="{DynamicResource PoppinsLight}" FontSize="14"
                           Text="{Binding ExportStatusText}"
                           Margin="0 0 0 10" />
                <ProgressBar Value="{Binding ExportProgress}"
                             Minimum="0"
                             Maximum="100"
                             Height="8"
                             CornerRadius="4"
                             Background="{DynamicResource PrimaryBackground}"
                             Foreground="{DynamicResource DarkLilacPastel}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 10 0 0" IsVisible="{Binding HaveBeenExported}">
                <TextBlock FontFamily="{DynamicResource PoppinsLight}" FontSize="{DynamicResource 18}"
                           Text="Transactions exported to location: " />
                <TextBlock FontFamily="{DynamicResource PoppinsLight}" FontSize="{DynamicResource 18}"
                           Text="{Binding ExportPath}" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>