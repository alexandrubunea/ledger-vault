<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ledger_vault.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
             x:Class="ledger_vault.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    <Design.DataContext>
        <vm:SettingsViewModel />
    </Design.DataContext>
    <StackPanel Margin="20">
        <Border CornerRadius="5" Padding="10"
                BorderBrush="{DynamicResource SecondaryBackground}" BorderThickness="1"
                Background="{DynamicResource SecondaryBackground}">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label FontFamily="{DynamicResource MerriweatherBlack}" FontSize="20" Content="Password" />
                    <Label Classes="icon" FontFamily="{DynamicResource Phosphor}" FontSize="20" Content="&#xe2d6;" />
                </StackPanel>
                <TextBlock FontFamily="{DynamicResource Poppins}" FontSize="15" Margin="0 20 0 0">
                    To change your password, fill out the boxes below.
                </TextBlock>

                <Grid ColumnDefinitions="*, *, *, *" HorizontalAlignment="Left" ColumnSpacing="50"
                      VerticalAlignment="Center" Margin="0 5 0 0">
                    <TextBox Grid.Column="0" Height="35" CornerRadius="5" Watermark="Your old password"
                             Width="200" FontFamily="{DynamicResource Poppins}" PasswordChar="*"
                             VerticalAlignment="Center" />

                    <TextBox Grid.Column="1" Height="35" CornerRadius="5" Watermark="Your new password"
                             Width="200" FontFamily="{DynamicResource Poppins}" PasswordChar="*"
                             VerticalAlignment="Center" />

                    <TextBox Grid.Column="2" Height="35" CornerRadius="5" Watermark="Retype your new password"
                             Width="200" FontFamily="{DynamicResource Poppins}" PasswordChar="*"
                             VerticalAlignment="Center" />

                    <Button Grid.Column="3" Height="35" Width="200" Classes="action"
                            FontSize="15" CornerRadius="5" VerticalAlignment="Center">
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                            Change Password
                        </TextBlock>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>