<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ledger_vault.ViewModels"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ledger_vault.Views.WeeklyChartView"
             x:DataType="vm:WeeklyChartViewModel"
             Background="{DynamicResource PrimaryBackground}"
             Foreground="{DynamicResource PrimaryForeground}">
    <Design.DataContext>
        <vm:ChartViewModel />
    </Design.DataContext>
    <StackPanel>
        <Border Padding="10" CornerRadius="5" Background="{DynamicResource SecondaryBackground}">
            <StackPanel>
                <StackPanel IsVisible="{Binding ContainsDataWeek}">
                    <TextBlock FontFamily="{DynamicResource MerriweatherLight}" FontSize="22"
                               Text="{Binding ChartTitle}" />
                    <lvc:CartesianChart
                        Series="{Binding LastWeekData}" XAxes="{Binding LastWeekDataXAxes}"
                        YAxes="{Binding LastWeekDataYAxes}" Height="300" ZoomMode="None">
                    </lvc:CartesianChart>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center"
                            IsVisible="{Binding NoDataWeek}">
                    <TextBlock Text="&#xe608;" FontFamily="{DynamicResource Phosphor}" FontSize="120"
                               Foreground="{DynamicResource PrimaryForeground}" HorizontalAlignment="Center" />
                    <TextBlock Text="No transactions have been recorded to create this chart"
                               FontFamily="{DynamicResource PoppinsLight}"
                               FontSize="20"
                               Foreground="{DynamicResource PrimaryForeground}" HorizontalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>