<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ledger_vault.ViewModels"
             xmlns:view="using:ledger_vault.Views"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
             x:Class="ledger_vault.Views.TransactionsListView"
             x:DataType="vm:TransactionsListViewModel"
             Unloaded="OnUnloaded">
    <Design.DataContext>
        <vm:TransactionsListViewModel />
    </Design.DataContext>
    <StackPanel>
        <ItemsControl ItemsSource="{Binding Transactions}" Margin="0 20">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <view:TransactionView Margin="0 20 0 0" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>